{
  "rewrites": [
    {
      "source": "/api", 
      "destination": "/api/main.js"
    }, 
    {
      "source": "/api/login",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/verify",
      "destination": "/api/verify.js"
    },
    {
      "source": "/dashboard",
      "destination": "/api/dashboard.js"
    },
    {
      "source": "/login",
      "destination": "/html/login.html"
    },
    {
      "source": "/403",
      "destination": "/html/403.html"
    },
    {
      "source": "/404",
      "destination": "/html/404.html"
    },
    {
      "source": "/:path*",
      "destination": "/html/404.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/login",
      "permanent": false
    },
    {
      "source": "/html/login.html",
      "statusCode": 403,
      "destination": "/login"
    },
    {
      "source": "/html/dashboard.html",
      "statusCode": 403,
      "destination": "/dashboard"
    },
    {
      "source": "/html/:path*",
      "statusCode": 403,
      "destination": "/403"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
