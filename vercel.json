{
  "rewrites": [
    {
      "source": "/api",
      "destination": "/api/main.js"
    },
    {
      "source": "/api/login",
      "destination": "/api/login.js"
    },
    {
      "source": "/api/verify",
      "destination": "/api/verify.js"
    },
    {
      "source": "/login",
      "destination": "/html/login.html"
    },
    {
      "source": "/dashboard",
      "destination": "/api/dashboard.js"
    },
    {
      "source": "/403",
      "destination": "/html/403.html"
    },
    {
      "source": "/404",
      "destination": "/html/404.html"
    },
    {
      "source": "/:path*",
      "destination": "/html/404.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/login",
      "permanent": false
    },
    {
      "source": "/api/main.js",
      "destination": "/403",
      "permanent": false
    },
    {
      "source": "/api/login.js", 
      "destination": "/403",
      "permanent": false
    },
    {
      "source": "/api/verify.js",
      "destination": "/403",
      "permanent": false
    },
    {
      "source": "/api/dashboard.js",
      "destination": "/403",
      "permanent": false
    },
    {
      "source": "/html/:path*",
      "destination": "/403",
      "permanent": false
    },
    {
      "source": "/:path*\\.(js|css|json|md|txt|env|config|html)$",
      "destination": "/403",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
